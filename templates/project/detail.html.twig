{% extends 'base.html.twig' %}

{% block title %}
  Détail du projet {{ project.id }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Projet : {{ project.name }} </h1>
                <p>Créé le : {{ project.startedAt |date("d/m/Y") }}</p>
            </div>
            <div class="col-md-6">
                Statut du projet : {{ project.status}}

            </div>
        </div>
        <a href="{{ path('tasks_add') }}">Ajouter une tâche</a>
<table class="table table-striped">
      <thead class="table table-striped">
        <tr>
          <th scope="col">
            #
          </th>
          <th scope="col">
            Nom de la tâche
          </th>
          <th scope="col">
            Description
          </th>
        </tr>
      </thead>
      <tbody>
        {% for task in tasks %}
            <tr>
                <th scope="col">
                    {{task.id}}
                </th>
                <td>
                    {{ task.name }}
                </td>
                <td>
                    {{ task.description }}
                </td>                
            </tr>
        {% endfor %}
      </tbody>
    </div>
  
{% endblock %}